{
  "Class": {
    "prefix": ["class"],
    "body": [
      "/**",
      " * @author ${VIM:\\$USER}",
      " */",
      "class $1 ${2:extends ${3:Parent} }{",
      "\tconstructor() {",
      "\t\t$0",
      "\t}",
      "}"
    ],
    "description": "Class definition template."
  },
  "Function" : {
      "prefix" : "function",
      "body" : [
          "function ${1:name_of_fun}",
          "\t$0",
          "end"
      ],
      "description" : "Function template for lua" 
  }
}
